{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true, // <--- Enable strict mode
        "skipLibCheck": true, // <--- Avoid conflicts with `node_modules`
        "baseUrl": "./",
        "paths": {
            "@generated/*": ["src/__generated__/*"] // <--- Alias for easier imports
        },
        "outDir": "./dist",
        "declaration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
